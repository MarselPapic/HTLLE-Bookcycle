# Bookcycle Docker Compose Environment Variables
# Copy this to .env and customize as needed

# PostgreSQL Configuration
POSTGRES_DB=bookcycle
POSTGRES_USER=bookcycle
POSTGRES_PASSWORD=bookcycle123
POSTGRES_PORT=5432

# Keycloak Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KEYCLOAK_HOSTNAME=localhost
KEYCLOAK_PORT=8180
KEYCLOAK_CLIENT_SECRET=change-me-in-production

# MailPit Configuration
MAILPIT_SMTP_PORT=1025
MAILPIT_UI_PORT=8025

# Backend Configuration (optional)
BACKEND_PORT=8080
SPRING_PROFILE_ACTIVE=dev

# JWT Configuration
JWT_EXPIRATION=3600
REFRESH_TOKEN_EXPIRATION=86400

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:19000
